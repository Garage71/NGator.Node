<head>
    <meta charset="utf-8"/>
</head>
<div class="jumbotron" ng-show="vm.newsList.length === 0">
    <h3 align="center">Please select news sources</h3>
</div>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-xs-12">            
            <uib-accordion close-others="false">
                <div uib-accordion-group class="panel-default" heading="\{{article.header}}" ng-repeat="article in vm.newsList" id="\{{article.uuid}}">
                    <uib-accordion-heading class="container">
                        \{{article.header}}; <small>\{{article.date}}</small><br><br><img ng-show="\{{article.hasLogo}}" ng-src="api/sources/logo/\{{article.source}}" title="\{{article.source}}" class="logo-picture">
                        <label ng-show="!article.hasLogo" style="color: blue">//\{{article.source}}</label>
                    </uib-accordion-heading>
                    \{{header.quote}}
                </div>
            </uib-accordion>                                
        </div>
    </div>
</div>